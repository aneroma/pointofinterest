

{{> welcomemenu }}

<section class="ui raised segment">
  <div class="ui grid">
    <div class="ui ten wide column">
      <div class="ui stacked fluid form segment">
        <form action="/login" method="POST">
          <h3 class="ui header">Log-in</h3>
          <div class="two fields">
            <div class="field">
              <label>First Name</label>
              <input placeholder="First Name" type="text" name="firstName">
            </div>
            <div class="field">
              <label>Last Name</label>
              <input placeholder="Last Name" type="text" name="lastName">
            </div>
          </div>
          <div class="field">
            <label>Email</label>
            <input placeholder="Email" type="text" name="email">
          </div>
          <div class="field">
            <label>Password</label>
            <input type="password" name="password" minlength="4">
          </div>
          <button class="ui green submit button">Submit</button>
        </form>
        {{> error }}
      </div>
    </div>
    <aside class="ui five wide column">
      <img src="images/login.png" class="ui centered large image">
    </aside>
  </div>
</section>